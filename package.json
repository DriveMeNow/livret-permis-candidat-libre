{
  "name": "livret-permis-candidat-libre-global",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "install:frontend": "npm install --prefix frontend",
    "install:backend": "npm install --prefix backend",
    "build:frontend": "npm run build --prefix frontend",
    "copy:frontend-to-backend": "mkdir -p backend/public/dist && cp -r frontend/dist/* backend/public/dist/",
    "build": "npm run install:frontend && npm run build:frontend && npm run install:backend && npm run copy:frontend-to-backend",
    "start": "npm run start --prefix backend"
  }
}
